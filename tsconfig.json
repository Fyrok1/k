{
  "exclude": [
    "node_modules",
    "lib",
    "tests",
    "apps",
    "locale"
  ],
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "es6",
      "dom",
      "es2017"
    ],
    "sourceMap": true,
    "outDir": "./dist/server",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}